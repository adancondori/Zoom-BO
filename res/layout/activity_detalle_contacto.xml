<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/background"
    tools:context=".DetalleContactoActivity" >

    <RelativeLayout
        android:id="@+id/rela_principal"
        android:layout_width="match_parent"
        android:layout_height="200dp"
        android:background="@color/background" >

        <RelativeLayout
            android:id="@+id/relativeLayout1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentBottom="true"
            android:layout_centerHorizontal="true"
            android:layout_marginBottom="@dimen/activity_vertical_margin" >

            <LinearLayout
                android:id="@+id/RelativeLayouthijo"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:choiceMode="singleChoice"
                android:orientation="horizontal" >

                <ImageView
                    android:id="@+id/typemap"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center_horizontal|center_vertical"
                    android:layout_marginLeft="7dp"
                    android:layout_marginRight="5dp"
                    android:background="@drawable/img_selector"
                    android:src="@drawable/facebook" />

                <ImageView
                    android:id="@+id/flapmap"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center_horizontal|center_vertical"
                    android:layout_marginLeft="5dp"
                    android:layout_marginRight="5dp"
                    android:background="@drawable/img_selector"
                    android:src="@drawable/twitter" />

                <ImageView
                    android:id="@+id/imgposalt"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center_horizontal|center_vertical"
                    android:layout_marginLeft="5dp"
                    android:layout_marginRight="5dp"
                    android:background="@drawable/img_selector"
                    android:src="@drawable/googleplus" />

                <ImageView
                    android:id="@+id/faceuploadscreem"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center_horizontal|center_vertical"
                    android:layout_marginLeft="5dp"
                    android:layout_marginRight="5dp"
                    android:background="@drawable/img_selector"
                    android:src="@drawable/zoombolivia" />

                <ImageView
                    android:id="@+id/barrio"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center_horizontal|center_vertical"
                    android:layout_marginLeft="5dp"
                    android:layout_marginRight="5dp"
                    android:background="@drawable/img_selector"
                    android:src="@drawable/mail" />
            </LinearLayout>
        </RelativeLayout>

        <ImageView
            android:id="@+id/fotouser"
            android:layout_width="75dp"
            android:layout_height="75dp"
            android:layout_alignParentTop="true"
            android:layout_marginLeft="20dp"
            android:layout_marginRight="10dp"
            android:layout_marginTop="10dp"
            android:background="@drawable/img_selector"
            android:src="@drawable/profle" />

        <TextView
            android:id="@+id/TextView04"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_above="@+id/textView1"
            android:layout_alignLeft="@+id/fotouser"
            android:layout_alignRight="@+id/relativeLayout1"
            android:text="Barrio Los Lotes"
            android:textAppearance="?android:attr/textAppearanceMedium"
            android:textStyle="bold" />

        <TextView
            android:id="@+id/textView1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_above="@+id/relativeLayout1"
            android:layout_alignLeft="@+id/TextView04"
            android:layout_alignRight="@+id/relativeLayout1"
            android:text="Compartir en:"
            android:textAppearance="?android:attr/textAppearanceMedium" />

        <TextView
            android:id="@+id/txt_nombre_contacto"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignTop="@+id/fotouser"
            android:layout_toRightOf="@+id/fotouser"
            android:text="Adan Condori C."
            android:textAppearance="?android:attr/textAppearanceMedium" />

        <TextView
            android:id="@+id/TextView02"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignLeft="@+id/txt_nombre_contacto"
            android:layout_below="@+id/txt_nombre_contacto"
            android:text="Ing. Informatico"
            android:textAppearance="?android:attr/textAppearanceMedium"
            android:textStyle="bold" />

        <TextView
            android:id="@+id/txt_telefono_contacto"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignLeft="@+id/TextView02"
            android:layout_below="@+id/TextView02"
            android:text="79050606"
            android:textAppearance="?android:attr/textAppearanceMedium"
            android:textStyle="bold" />
    </RelativeLayout>

    <RelativeLayout
        android:id="@+id/relativeLayout1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="23dp" >
    </RelativeLayout>

    <fragment
        android:id="@+id/mapdetallecontacto"
        android:name="com.google.android.gms.maps.SupportMapFragment"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_alignParentLeft="true"
        android:layout_below="@+id/rela_principal" />

    <LinearLayout
        android:id="@+id/liner_hijo"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_centerHorizontal="true"
        android:layout_marginBottom="10dp"
        android:choiceMode="singleChoice"
        android:orientation="horizontal" >

        <ImageView
            android:id="@+id/typemap"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_horizontal|center_vertical"
            android:layout_marginLeft="7dp"
            android:layout_marginRight="5dp"
            android:background="@drawable/img_selector"
            android:src="@drawable/toolbox" />

        <ImageView
            android:id="@+id/flapmap"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_horizontal|center_vertical"
            android:layout_marginLeft="5dp"
            android:layout_marginRight="5dp"
            android:background="@drawable/img_selector"
            android:src="@drawable/home" />

        <ImageView
            android:id="@+id/imgposalt"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_horizontal|center_vertical"
            android:layout_marginLeft="5dp"
            android:layout_marginRight="5dp"
            android:background="@drawable/img_selector"
            android:src="@drawable/location" />

        <ImageView
            android:id="@+id/imgbus"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_horizontal|center_vertical"
            android:layout_marginLeft="5dp"
            android:layout_marginRight="5dp"
            android:background="@drawable/img_selector"
            android:src="@drawable/schooolbus" />
    </LinearLayout>

</RelativeLayout>