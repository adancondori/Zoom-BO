<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:screenOrientation="portrait" >

    <com.tabs.adancc.desplazarview.TabsActivity
        android:id="@+id/tabs_der"
        android:layout_width="match_parent"
        android:layout_height="48dp"
        android:layout_centerHorizontal="true"
        android:background="@drawable/background_tabs"
        app:dividerColor="#000000"
        app:indicatorColor="@color/sectionSeparatorColour"
        app:shouldExpand="true"
        app:tabPaddingLeftRight="14dip"
        app:underlineColor="@color/sectionSeparatorColour" />

    <android.support.v4.view.ViewPager
        android:id="@+id/pager_der"
        android:layout_width="match_parent"
        android:layout_height="fill_parent"
        android:layout_below="@+id/tabs_der" />

</RelativeLayout>