<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    tools:context=".SearchActivity" >

    <EditText
        android:id="@+id/texttexto"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="3dp"
        android:background="@drawable/redondeado"
        android:drawableLeft="@drawable/p_cursor"
        android:drawablePadding="5dp"
        android:ems="10"
        android:hint="Inserte el Texto"
        android:inputType="textEmailAddress"
        android:paddingBottom="5dp"
        android:paddingLeft="5dp"
        android:paddingTop="5dp"
        android:singleLine="true"
        android:textColor="@color/negro"
        android:textColorHint="@color/colorhint"
        android:textSize="18sp" >
    </EditText>

    <TextView
        android:id="@+id/textcategoria"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_alignLeft="@+id/textfecha"
        android:layout_below="@+id/textfecha"
        android:layout_marginTop="3dp"
        android:background="@drawable/redondeado"
        android:drawableLeft="@drawable/p_briefcase"
        android:drawablePadding="5dp"
        android:ems="10"
        android:gravity="center_vertical"
        android:hint="Categorias"
        android:paddingBottom="5dp"
        android:paddingLeft="5dp"
        android:paddingTop="5dp"
        android:singleLine="true"
        android:textColor="@color/negro"
        android:textColorHint="@color/colorhint"
        android:textSize="18sp" />

    <TextView
        android:id="@+id/textfecha"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignLeft="@+id/texttexto"
        android:layout_below="@+id/texttexto"
        android:layout_marginTop="3dp"
        android:background="@drawable/redondeado"
        android:drawableLeft="@drawable/p_calendar"
        android:drawablePadding="5dp"
        android:ems="10"
        android:gravity="center_vertical"
        android:hint="IntÃ©rvalo"
        android:paddingBottom="5dp"
        android:paddingLeft="5dp"
        android:paddingTop="5dp"
        android:singleLine="true"
        android:textColor="@color/negro"
        android:textColorHint="@color/colorhint"
        android:textSize="18sp" />

    <Button
        android:id="@+id/btbbuscar"
        style="?android:attr/buttonStyleSmall"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignLeft="@+id/textcategoria"
        android:layout_below="@+id/textcategoria"
        android:layout_marginTop="18dp"
        android:background="@drawable/redondeadobotton"
        android:drawableLeft="@drawable/success"
        android:paddingLeft="5dp"
        android:paddingRight="48dp"
        android:text="@string/title_buscar"
        android:textColor="#FFFFFF"
        android:textSize="18sp" />

</RelativeLayout>